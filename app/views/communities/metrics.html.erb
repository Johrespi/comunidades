
<%= content_for :title, "Métricas de la Comunidad" %>

<div style="margin: 20px auto; padding: 20px; border: 2px solid #ccc; border-radius: 10px; max-width: 600px; background-color: #f9f9f9; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
  <h1 style="text-align: center; color: #333;">Métricas de la Comunidad: <%= @community.name %></h1>
  <ul style="list-style: none; padding: 0; font-size: 16px; line-height: 1.8; color: #555;">
    <li><strong>Número de eventos:</strong> <%= @events_count %></li>
    <li><strong>Número de publicaciones:</strong> <%= @posts_count %></li>
    <li><strong>Número de participantes totales:</strong> <%= @total_attendees_count %></li>
    <li><strong>Promedio de participantes por evento:</strong> <%= @average_attendees %></li>
  </ul>
  <div style="text-align: center; margin-top: 20px;">
    <%= link_to "Volver a la comunidad", community_path(@community), style: "display: inline-block; padding: 10px 20px; background-color: #007bff; color: #fff; text-decoration: none; border-radius: 5px; font-size: 16px;" %>
  </div>
</div>
